<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName">
            <value>com.mysql.jdbc.Driver</value>

        </property>
        <property name="url"><value>jdbc:mysql://localhost:3306/yahtzee</value></property>
        <property name="username"><value>yahtzee</value></property>
        <property name="password"><value>yahtzee</value></property>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource">
            <ref local="dataSource"/>
        </property>
        <property name="mappingResources">
            <list>
                <value>be/kdg/yahtzee/dao/User.hbm.xml</value>
                <value>be/kdg/yahtzee/dao/Role.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</prop>
                <prop key="hibernate.hbm2ddl.auto">create</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>


    <bean id="userDao" class="be.kdg.yahtzee.dao.UserDaoImpl">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>

    <bean id="roleDao" class="be.kdg.yahtzee.dao.RoleDaoImpl">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>

    <bean id="userManager" class="be.kdg.yahtzee.model.users.UserManager" autowire="byName"/>
    <bean id="gameManager" class="be.kdg.yahtzee.model.game.GameManager" autowire="byName"/>

    <bean id="yahtzeeController" class="be.kdg.yahtzee.model.YahtzeeController" autowire="byName"/>

    <bean id="onlineUsersBean" class="be.kdg.yahtzee.beans.OnlineUsersBean" autowire="byName"/>
</beans>
